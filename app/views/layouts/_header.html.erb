                </div>
            </div>
            <!--== Social Icons End ==-->
        </div>
    </div>
</div>
<!--== Header Top End ==-->

<!--== Header Bottom Start ==-->
<div id="header-bottom">
    <div class="container">
        <div class="row">
            <!--== Logo Start ==-->
            <div class="col-lg-4">
                <%= link_to cars_path do %>
                <%= image_tag("img/logo.png", :alt => "JSOFT", :class => "logo") %>
                <% end %>
            </div>
            <!--== Logo End ==-->

            <!--== Main Menu Start ==-->
            <div class="col-lg-8 d-none d-xl-block">
                <nav class="mainmenu alignright">
                    <ul>
                        
                        <li><%= link_to 'Home', cars_path %></li>
                        <li><%= link_to 'About', target: "_blank" %></li>
                        <li><%= link_to 'Cars Without Side Bar', target: "_blank" %></li>
                        <li><%= link_to 'Contact', target: "_blank" %></li>
                        <% if current_user %>
                        <li><%= link_to  "Sign Out", destroy_user_session_path, method: :delete %></li>
                        <li><%= link_to "History", orders_path %></li>
                        <li><%= link_to "Edit User", edit_user_registration_path %></li>
                        <% else %>
                        <li><%= link_to  "Sign In", new_user_session_path %></li>
                        <li><%= link_to  "Sign Up", new_user_registration_path %></li>
                        <% end %>
                    </ul>
                </nav>
            </div>
            <!--== Main Menu End ==-->
        </div>
    </div>
</div>
<!--== Header Bottom End ==-->
</header>
<!--== Header Area End ==-->
