    <!--== SlideshowBg Area Start ==-->
    <section id="slideslow-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="slideshowcontent">
                        <div class="display-table">
                            <div class="display-table-cell">
                                <h1>BOOK A CAR TODAY!</h1>
                                <p>AYO RENTAL SEKARANG JUGA <br> DAPATKAN BONUS UNTUK PEMESANAN HARI INI</p>

                                <div class="book-ur-car">
                                    <%= form_tag(cars_path, :method => "get", id: "search-form") do %>
                                    <div class="bookinput-item car-choose">
                                        <%= select_tag :search1, options_from_collection_for_select(Car.all.to_a.uniq {|o| o.name}, :name, :name), {:class => 'custom-select', :prompt => 'Choose Car'} %>
                                    </div>
                                    <div class="bookinput-item">
                                        <%= select_tag :search2, options_from_collection_for_select(Car.all.to_a.uniq {|o| o.transmission}, :transmission, :transmission), {:class => 'custom-select', :prompt => 'Transmission'} %>
                                    </div>
                                    <div class="bookinput-item">
                                        <%= select_tag :search3, options_from_collection_for_select(Car.all.to_a.uniq {|o| o.model}, :model, :model), {:class => 'custom-select', :prompt => 'Model'} %>
                                    </div>
                                    <div class="bookinput-item">
                                        <%= select_tag :search4, options_from_collection_for_select(Car.all.to_a.uniq {|o| o.manufactor}, :manufactor, :manufactor), {:class => 'custom-select', :prompt => 'Manufactor'} %>
                                    </div>
                                    <div class="bookcar-btn bookinput-item">
                                        <button type="submit">Book Car</button>
                                    </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--== SlideshowBg Area End ==-->

    <!--== Car List Area Start ==-->
    <section id="car-list-area" class="section-padding">
        <div class="container">
            <div class="row">
                <!-- Car List Content Start -->
                <div class="col-lg-12">
                    <div class="car-list-content">
                        <div class="row">
                            <% @cars.each do |car| %>
                            <div class="col-lg-6 col-md-6">
                                <div class="single-car-wrap">
                                    <div class="car-list-thumb"><img class="image-size" src="<%= car.image %>"></div>
                                    <div class="car-list-info without-bar">
                                        <h2><%= car.name %></h2>
                                        <h5><%= number_to_currency(car.price, unit: "Rp ") %></h5>
                                        <p><%= car.description %></p>
                                        <p class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </p>

                                        <%= link_to  "Detail", car_path(car), class: 'rent-btn', method: :get %>
                                        <%= link_to  "Checkout", new_order_path(:car_id => car.id), :method => :post, class: 'rent-btn' %>
                                    </div>
                                </div>
                            </div>
                            <% end %>
                            <!-- Single Car End -->
                        </div>
                    </div>
                    <%= paginate @cars %>
                    <!-- Page Pagination End -->
                </div>
                <!-- Car List Content End -->
            </div>
        </div>
    </section>
    <!--== Car List Area End ==-->